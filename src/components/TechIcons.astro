---
import ReactIcon from '../icons/ReactIcon.astro';
import TypescriptIcon from '../icons/TypescriptIcon.astro'
import ReduxIcon from '../icons/ReduxIcon.astro'
import FirebaseIcon from '../icons/FirebaseIcon.astro'
import ViteIcon from '../icons/ViteIcon.astro';
import TailwindIcon from '../icons/TailwindIcon.astro';
import JavaScriptIcon from '../icons/JavaScriptIcon.astro'

interface Props {
    name: string;
}

const { name } = Astro.props;
---
<span class="relative flex items-center justify-center group">
    {((name: string) => {switch(name) {
        case 'React': 
            return <ReactIcon />;
        case 'Typescript':
            return <TypescriptIcon />;
        case 'Redux':
            return <ReduxIcon />;
        case 'Firebase':
            return <FirebaseIcon />;
        case 'Vite':
            return <ViteIcon />;
        case 'Tailwind':
            return <TailwindIcon />;
        case 'JavaScript':
            return <JavaScriptIcon />;
        default:
            return null
    }})(name)}
    <span class="relative text-xs text-secondary opacity-0 group-hover:opacity-100">{name}</span>
</span>